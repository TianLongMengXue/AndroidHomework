<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="500dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="230dp">
                <ImageView
                        android:id="@+id/imageOne"
                        android:contentDescription="@string/image_one"
                        android:layout_gravity="start"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>
                <ImageView
                        android:id="@+id/imageTwo"
                        android:contentDescription="@string/image_two"
                        android:layout_gravity="end"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="230dp">
                <ImageView
                        android:id="@+id/imageThree"
                        android:contentDescription="@string/image_three"
                        android:layout_gravity="start"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>
                <ImageView
                        android:id="@+id/imageFour"
                        android:contentDescription="@string/image_four"
                        android:layout_gravity="end"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>

            </LinearLayout>
        </LinearLayout>
        <Button
                android:id="@+id/loadingButton"
                android:layout_gravity="center"
                android:text="@string/load_button"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

</LinearLayout>
